<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.clarkson.ee408.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/eqDisplay"
        android:textStyle="normal"
        android:textColor="#000000"
        android:background="#ffffff"
        android:textColorHighlight="#666666"
        android:textSize="35dp"
        android:textIsSelectable="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eqDisplay"
        android:id="@+id/secDisplayLinear">
        <TextView
            android:layout_width="0.0dip"
            android:layout_weight="1.0"
            android:layout_height="75dp"
            android:id="@+id/textDisplay"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="#ffffff"
            android:textColorHighlight="#666666"
            android:textSize="35dp"
            android:layout_below="@id/eqDisplay"
            android:textIsSelectable="true" />
        <TextView
            android:layout_width="0.0dip"
            android:layout_weight="1.0"
            android:layout_height="75dp"
            android:id="@+id/ansDisplay"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="#ffffff"
            android:textColorHighlight="#666666"
            android:textSize="35dp"
            android:layout_below="@id/eqDisplay"
            android:textIsSelectable="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secDisplayLinear"
        android:id="@+id/topLinear">

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="0.0dip"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="50dp"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="0.0dip"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="50dp"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLinear"
        android:id="@+id/bottomLinear">

        <Button
            android:id="@+id/buttonMult"
            android:layout_width="0.0dip"
            android:layout_height="100dp"
            android:text="X"
            android:textSize="50dp"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="0.0dip"
            android:layout_height="100dp"
            android:text="/"
            android:textSize="50dp"
            android:layout_weight="1.0" />




    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/bottomDisplay"
        android:textStyle="normal"
        android:textColor="#000000"
        android:background="#ffffff"
        android:textColorHighlight="#666666"
        android:textSize="40dp"
        android:textIsSelectable="true"
        android:gravity="center"
        android:layout_below="@+id/lastNumLinear"/>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secDisplayLinear"
        android:id="@+id/topNumLinear">
        <Button
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="1"
            android:layout_marginRight = "10dp"
            android:layout_marginBottom = "10dp"
            android:textSize="10pt"
            android:layout_weight="1.0"
            android:id="@+id/button1" />
        <Button
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="2"
            android:layout_marginRight = "10dp"
            android:layout_marginBottom = "10dp"
            android:textSize="10pt"
            android:layout_weight="1.0"
            android:id="@+id/button2" />
        <Button
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="3"
            android:layout_marginRight = "10dp"
            android:layout_marginBottom = "10dp"
            android:textSize="10pt"
            android:layout_weight="1.0"
            android:id="@+id/button3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topNumLinear"
        android:id="@+id/midNumLinear">

        <Button
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="4"
            android:layout_marginRight = "10dp"
            android:layout_marginBottom = "10dp"
            android:textSize="10pt"
            android:layout_weight="1.0"
            android:id="@+id/button4" />
        <Button
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="5"
            android:layout_marginRight = "10dp"
            android:layout_marginBottom = "10dp"
            android:textSize="10pt"
            android:layout_weight="1.0"
            android:id="@+id/button5" />
        <Button
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="6"
            android:layout_marginRight = "10dp"
            android:textSize="10pt"
            android:layout_below="@id/button3"
            android:layout_weight="1.0"
            android:id="@+id/button6" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midNumLinear"
        android:id="@+id/botNumLinear">
        <Button
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="7"
            android:layout_marginRight = "10dp"
            android:textSize="10pt"
            android:layout_weight="1.0"
            android:id="@+id/button7" />
        <Button
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="8"
            android:layout_marginRight = "10dp"
            android:textSize="10pt"
            android:layout_weight="1.0"
            android:id="@+id/button8" />
        <Button
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="9"
            android:layout_marginRight = "10dp"
            android:textSize="10pt"
            android:layout_weight="1.0"
            android:id="@+id/button9" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botNumLinear"
        android:id="@+id/lastNumLinear">
        <Button
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="0"
            android:layout_marginRight = "10dp"
            android:layout_marginBottom= "10dp"
            android:textSize="10pt"
            android:layout_weight="1.0"
            android:id="@+id/button0" />
        <Button
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="Clear"
            android:layout_marginRight = "10dp"
            android:textSize="10pt"
            android:layout_weight="1.0"
            android:id="@+id/buttonclr" />
        <Button
            android:id="@+id/buttonEnter"
            android:layout_width="0.0dip"
            android:layout_height="50dp"
            android:text="Enter"
            android:layout_weight="1.0"
            android:layout_marginRight = "10dp"
            android:textSize="10pt" />

    </LinearLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="Next Question" />

    <TextView
        android:id="@+id/score_display"
        android:layout_width="99dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:text="" />

</RelativeLayout>